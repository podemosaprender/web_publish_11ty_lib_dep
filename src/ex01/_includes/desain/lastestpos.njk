<div class="container">
<div class="row">
{% for post in postslist | reverse %}
<div reversed class="postlist col-md-3 col-6 p-1" style="counter-reset: start-from {{ (postslistCounter or postslist.length) + 1 }}">

<div class="card">
<a href="{{ post.url | url }}" class="postlist-link row">
    <div class="col-md-12">
  <img class="img-fluid border-end" alt="{{ post.data.title }}" width="100%" height="100%" src="{{ post.data.cover }}"/>
    </div>
  <div class="card-body p-1 col-md-12 postlist-item{% if post.url == url %} postlist-item-active{% endif %}">
      <div class="card-body">
        <h4 class="card-title">{% if post.data.title %}{{ post.data.title }}{% else %}<code>{{ post.url }}</code>{% endif %}</h4>
    <p class="card-text"><small><time class="postlist-date text-secondary" datetime="{{ post.date | htmlDateString }}">{{ post.date | readableDate }}</time></small></p>
      </div>
  </div>
  </a>
</div>
</div>
{% endfor %}
</div>
</div>
