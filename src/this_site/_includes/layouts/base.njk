{% import 'lib/bs/macros.njk' as cmp with context %}

<!doctype html>
<html lang="{{ cfg.language }}">
	<head>
		{% include "layouts/widgets/head.njk" %}
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
		<link href="/css/colors.css" rel="stylesheet" />
	</head>
	<body>
		{{ cmp.navbar() }}
		<div class="col-lg-8 mx-auto p-3 py-md-5">
			<main{% if templateClass %} class="container pt-3 {{ templateClass }}"{% endif %}>
				<div class="row">
					<div class="col-md-9 p-3 p-md-5">
						{{ content | safe }}
					</div>
				</div>
			</main>
			<footer class="pt-5 my-5 text-muted border-top">
				{{ cfg.brand }} &middot; &copy; {{ now | formatDate("yyyy") }}
			</footer>
			 <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
			<script src="/js/color-toggle.js"></script>
	</body>
</html>
