{% set twme= {
'hero': ws_hero,
'whyus': ws_whyus,
'features': ws_features,
'pricing': ws_pricing,
'blog': ws_blog,
'contact': ws_contact,
'registerModal': ws_registerModal
} %}

{% macro r(p,tw) %}	
	<body>
		{{ light_dark_mode(p) }}
		{{ preloader(p) }}

		{% set_k p.defaults, "navitems", {} %}
		{% for id, data in p.sections %}
			{% set_k p.defaults.navitems,'#'+id, id %}
		{% endfor %}
		{{ navbar(p.defaults) }}

		{%for id, data in p.sections %}
			{{ DBG(data,"SECTION "+id+" "+data.type) }}
			{%  if twme[data.type] %}
				{% set_k p, "id", id %}
				{{ twme[data.type](data) }}
			{% else %}
				<div style="background: red;">{{ id }} NO_DEF_FOR_TYPE {{data.type}}<pre>{{ data | dump | safe}}</pre></div>
				{% endif %}
			{% endfor %}

			{{ footer(p.footer) }}

			{{ ws_logimModal(p) }}
			{{ ws_registerModal(p) }}

			<!-- javascript -->
			<script src="js/bootstrap.bundle.min.js"></script>
			<script src="js/smooth-scroll.polyfills.min.js"></script>
			<script src="js/gumshoe.polyfills.min.js"></script>
			<!-- feather icon -->
			<script src="js/feather.js"></script>
			<!-- unicons icon -->
			<script src="js/unicons.js"></script>
			<!-- Main Js -->
			<script src="js/app.js"></script>

	</body>
{% endmacro %}



