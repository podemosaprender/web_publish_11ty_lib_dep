---
pagination:
  data: collections
  size: 1
  alias: tag
  filter:
    - all
    - nav
    - post
    - posts
    - promo
    - promos
    - tagList
  addAllPagesToCollections: true
layout: layouts/home.njk
eleventyComputed:
  title: Tagged “{{ tag }}”
permalink: /tags/{{ tag | slug }}/
eleventyExcludeFromCollections: true
---
<h1>Tagged “{{ tag }}”</h1>

{% set postslist = collections[ tag ] %}
<p>See <a href="{{ '/tags/' | url }}">all tags</a>.</p>
